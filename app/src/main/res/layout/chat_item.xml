<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_alignParentStart="true"
        android:id="@+id/img_avatar"
        android:src="@drawable/cap"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/_200sdp"
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentLeft="true" />
    <LinearLayout
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_toEndOf="@+id/img_avatar"
        android:layout_alignBottom="@+id/img_avatar"
        android:layout_alignTop="@id/img_avatar"
        android:layout_toRightOf="@+id/img_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/_10sdp">
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
            android:text="@string/last_name"
            android:textColor="@color/primary_text"
            android:ellipsize="end"
            android:singleLine="true"/>
        <RelativeLayout
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_toLeftOf="@+id/txt_time"
                android:gravity="center_vertical"
                android:id="@+id/txt_last_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_10sdp"
                android:text="@string/last_name"
                android:textColor="@color/secondary_text"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_toStartOf="@+id/txt_time" />
            <TextView
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:text="@string/time"
                android:textColor="@color/secondary_text"
                android:ellipsize="end"
                android:singleLine="true"/>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>